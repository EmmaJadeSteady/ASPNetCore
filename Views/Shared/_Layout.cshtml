<!DOCTYPE html>
<html>
    <head>
        <title>Page: @ViewBag.Title</title>
        <meta charset="utf-8"/>
        <link rel="stylesheet" href="~/css/bootrstrap.min.css"  />
        <link rel="stylesheet" href="~/css/spacelab/bootstrap.min.css"  />
        <link rel="stylesheet" href="~/css/font-awesome.min.css"  />
    
        <link rel="stylesheet" href="~/css/site.css"  />
        
    </head>
    <body>
        <sidebar>
            <img src="~/img/mitzis.jpg" alt="headshot" class="headshot" />
            <span id="username">Mitzi</span>
            <div class="nav">
                <ul><a  class="active" asp-controller="App" asp-action="Index">Home</a></ul>
                <ul><a  asp-controller="App" asp-action="About">About</a></ul>
                <ul><a  asp-controller="App" asp-action="Contact">Contact</a></ul>
            </div>
        </sidebar>
        <div id="wrapper">
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                             <button id="sidebarToggle" class="btn btn-primary">
                                <i class="fa fa-angle-left"></i>
                            </button>
                        </li>
                    </ul>
                    <a asp-controller="App" asp-action="Index" class="navbar-brand">The World</a>
               
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="#" class="btn btn-sm btn-info">
                                <i class="fa fa-save"></i>Save
                            </a>
                        </li>
                        <li>
                            <a href="#" class="btn btn-sm btn-info">
                                <i class="fa fa-print"></i>Print
                            </a>
                        </li>
                    </ul>
                    
                </div>
            </nav>
            <section id="main1" class="container-fluid">               
                @RenderBody()         
            </section>
            <footer class="container-fluid">
            <div class="navbar navbar-inverse navbar-fixed-bottom">
                <h4 class="text-center text-warning">&copy; tutorials plc</h4>
            </div>
            </footer>
        </div>
    </body>
    <script type="text/javascript" src="~/lib/jquery.min.js" ></script>
     <script type="text/javascript" src="~/js/bootstrap.min.js" ></script>
    <script type="text/javascript" src="~/js/site.js" ></script>
    @RenderSection("scripts", false)
    </html>